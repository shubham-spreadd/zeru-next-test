{
  "root": true,
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "settings": {
    "import/resolver": {
      "typescript": {},
      "node": true
    },
    "react": {
      "version": "detect"
    }
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json",
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended",
    "plugin:import/recommended",
    "plugin:import/typescript",
    "next/core-web-vitals",
    "prettier"
  ],
  "plugins": ["import", "@typescript-eslint", "@next/eslint-plugin-next"],
  "rules": {
    "import/no-duplicates": "error",
    "import/order": [
      1,
      {
        "newlines-between": "always"
      }
    ],
    "import/newline-after-import": "error",
    "newline-before-return": [2]
  }
}
